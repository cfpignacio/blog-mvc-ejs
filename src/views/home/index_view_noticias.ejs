<h1>NOTICIAS DE ULTIMO MINUTO</h1>
<div class="row">

    <% noticias.forEach(noticia=> { %>

        <div class="col col-xl-4 mb-2">
            <a style="text-decoration: none;" href="/noticias/<%= noticia.id %>">
                <div class=" card" style="width: 18rem;">
                    <div class="card-body">
                        <img src="<%=noticia.imagenURL %>" alt="">
                        <h5 class="card-title">
                            <%= noticia.titulo %>
                        </h5>
                        <p class="card-text">
                            <%= noticia.contenido %>
                        </p>
                        <p class="card-text text-end" style="  font-size: 8px;">
                            <%= noticia.create_at %>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% }) %>
            </a>
</div>